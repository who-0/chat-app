<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="/css/styles.css" type="text/css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="active_users" id="active_users"></div>
            </div>
            <div class="col-6">
                <div class="message_history" id="message_history"></div>
                <div class="user_typing" id="user_typing"></div>
            </div>
        </div>
        <div class="form_container">
            <form id="user_form">
                <input type="text" name="message" id="user_message" placeholder="Type message..." autocomplete="off">
                <button type="submit">Send</button>
            </form>
        </div>
    </div>


    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/user_socket.js" type="text/javascript"></script>
</body>

</html>